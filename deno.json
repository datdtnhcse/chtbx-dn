{
	"tasks": {
		"clienti": "(deno run -Ar webapp/main.ts && false) & (deno run -Ar client/main.ts && false)",
		"client": "CLIENT_NO=0 deno task clienti",
		"client2": "CLIENT_NO=1 deno task clienti",
		"server": "deno run -Ar server/main.ts"
	},
	"importMap": "./import_map.json",
	"fmt": {
		"options": {
			"indentWidth": 4,
			"useTabs": true
		}
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	}
}